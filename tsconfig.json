{
  "compilerOptions": {
    "target": "ES6",
    "types": ["node"],
    "outDir": "dist",
    "useDefineForClassFields": true,
    "module": "Node16",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "noEmitOnError": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Node mode */
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"]
}
